package com.leave;

import java.time.LocalDate;
import java.time.format.DateTimeFormatter;
import java.time.temporal.ChronoUnit;

public class MaternityLeaveRequest extends LeaveRequest{
	private String deliveryDate;
	private boolean medicalCertificateProvided;

	
	public MaternityLeaveRequest(int requestId, Employee employee, String startDate, String endDate,String deliveryDate,boolean medicalCertificateProvided) {
		super(requestId,employee,startDate,endDate,"Maternity Leave");
		this.deliveryDate = deliveryDate;
		this.medicalCertificateProvided = medicalCertificateProvided;
	}
	
	public String getDeliveryDate() {
		return this.deliveryDate;
	}
	
	public boolean isMedicalCertificateProvided() {
		return medicalCertificateProvided;
	}
	
	@Override
	public boolean processRequest() {
	    if (deliveryDate.equals("") && !medicalCertificateProvided) {
	        System.out.println("Maternity Date is not provided!");
	        return false;
	    }
	    System.out.println("Processing maternity leave request...");
	    return true;
	}

	@Override
	public boolean approve(String approverName) {
		// TODO Auto-generated method stub
		return false;
	}

	@Override
	public boolean deny(String approverName, String reason) {
		// TODO Auto-generated method stub
		return false;
	}

	@Override
	public int calculateLeaveDays() {
		DateTimeFormatter formatter = DateTimeFormatter.ofPattern("yyyy-mm-dd");
		LocalDate start = LocalDate.parse(startDate,formatter);
		LocalDate end = LocalDate.parse(endDate,formatter);
		return (int) ChronoUnit.DAYS.between(start, end);
	}
}
